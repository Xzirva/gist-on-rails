<%= render partial: 'search/specific_search_form'%>

<div class="page-header"><h1>Listing Gists</h1>
  <%if params[:controller]=="search"%>
      <small>Search Results</small>
  <%end%>
</div>

<%if @notice.nil? %>
    <p id="notice">
      <%= @notice %>
    </p>
<%end%>

<%unless @gists.nil?%>
    <% @gists.each do |gist| %>
        <div class="row-fluid">
         <%=render partial: 'gists/gist_header', locals: {gist: gist}%>

          <code data-gist-id="<%=gist[:id]%>" data-gist-line="1-4"></code>
        </div>
        <!--<td><= link_to 'Edit', edit_gist_path(gist) %></td>-->
        <!--<td><= link_to 'Destroy', gist, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
    <% end %>
<%end%>
