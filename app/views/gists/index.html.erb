<p id="notice"><%= notice %></p>

<h1>Listing Gists</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @gists.each do |gist| %>
      <tr>
        <% gist[:files].each { |k,v|%>
            <td><strong><%=v[:filename]%></strong></td>
            <td>Language: <strong><%=v[:language]||"Text File"%></strong></td>
            <td>Type: <strong><%= v[:type]%></strong></td>
        <%}%>
        <td><%= link_to 'Show', gist_path(gist[:id]) %></td>
        <!--<td><= link_to 'Edit', edit_gist_path(gist) %></td>-->
        <!--<td><= link_to 'Destroy', gist, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
  <% end %>
  </tbody>
</table>

